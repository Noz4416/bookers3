<div class ="container">
  <div class ="row">
    <div class ="col-lg-5 px-5 pt-4 mx-auto">

     <h1>Editing Book</h1>

     <% if @book.errors.any? %>
       <%= @book.errors.count %>errors have occurred
         <ul>
           <% @book.errors.full_messages.each do |message| %>
           <li><%= message%></li>
           <% end %>
         </ul>
     <% end %>



     <%= form_with model: @book do |f|%>
      <div class ="form mb-3">
        <%= f.label :Title %></br>
        <%= f.text_field :title %>
      </div>
      <div class ="form mb-3">
        <%= f.label :Opinion %></br>
        <%= f.text_area :body %>
      </div>
      <div class ="actions mb-3">
        <%= f.submit"Update Book", class:"btn btn-success" %>
      </div>

      <%= link_to "Show", book_path %>
      | <%= link_to "Back", books_path %>

     <% end %>

    </div>
  </div>
</div>

