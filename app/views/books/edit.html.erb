<div class ="container">
  <div class ="row">
    <div class ="col-lg-5 px-5 mx-auto">

     <h1>Editing Book</h1>

     <%= form_with model:@book do |f|%>
      <div class ="form">
        <%= f.label :Title %></br>
        <%= f.text_field :title, autofocus: true%>
      </div>
      <div class ="form">
        <%= f.label :Opinion %>
        <%= f.text_area :body %>
      </div>
      <div class ="actions">
        <%= f.submit"Update Book", class:"btn btn-success" %>
      </div>

      <%= link_to "Show", user_path(user.id) %>
      |<%= link_to "Back", books_path %>

     <% end %>

    </div>
  </div>
</div>

