     <h2 class ="mt-3 pb-2">New book</h2>

     <%= form_with model: book do |f|%>

      <div class="form pb-3">
        <label>Title</label>
        <%= f.text_field :title, class:"form-control"%>
      </div>
      <div class="form pb-3">
        <label>Opnion</label>
        <%= f.text_area :body, class:"form-control"%>
      </div>
      <div class="action pb-3">
        <%= f.submit'Create Book', class:"btn btn-success"%>
      </div>
     <% end %>