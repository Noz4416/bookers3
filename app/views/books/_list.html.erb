<div class ="container px-5">
  
  <% books.each do |book|%>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_profile_image %>
    <% end %>
    <div class ="row">
      <div class ="col-md-3">
 
        <h2>User info</h2>

        <div><%= image_tag user.get_profile_imag(100,100)%></div>
        <table class ="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= book.user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class ="row">
          <%= link_to edit_user_path(user), class: "btn btn-outline secondry btn-block" %>
          <i class ="fa fa-user-cog fa-w-20"></i>
        </div>
      </div>
    </div>
  <% end %>
  
  
  <h2 class ="mt-3 pb-2">New book</h2>

  <%= form_with model: book do |f|%>

    <div class="form pb-3">
      <label>Title</label>
      <%= f.text_field :title, class:"form-control"%>
    </div>
    <div class="form pb-3">
      <label>Opnion</label>
      <%= f.text_area :introduction, class:"form-control"%>
    </div>
    <div class="action pb-3">
      <%= f.submit'Create Book', class:"btn btn-success"%>
    </div>
  <% end %>
</div>
