<div class ="container px-5">
  <div class ="row">
     <div class ="col-md-3">

　　　<%= render 'list', user: @user, book: @book%>

     </div>

     <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>


       <table class = "table">
         <tbody>
           <tr>
            <td>
            <%= link_to book_path(@book.id) do %>
             <%= image_tag @book.user.get_profile_image(100,100)%>
            <% end %></br>
            <%= link_to @book.user.name %>
            </td>
            <td><%= @book.title%></td>
            <td><%= @book.body%></td>

            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success"%></td>
              <td><%= link_to "Destroy",book_path, method: :delete, class: "btn btn-sm btn-danger", "data-confirm"=>"本当に削除しますか？"%></td>
            <% end %>
          </tr>
         </tbody>
       </table>

      </div>
  </div>
</div>