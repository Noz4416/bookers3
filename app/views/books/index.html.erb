<div class ="container px-5">
  <div class ="row">
     <div class ="col-md-3">

    <%= render 'list', users: @user, book: @book%>

     </div>
     
     <div class ="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <% @books.each do |book|%>
       <table class = "table table-striped">
         <thead>
           <tr>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
         </thead>
         <tbody>
           <tr>
             <td><%= @book.title%></td>
             <td><%= @book.opinion%></td>
           </tr>
         </tbody>
       </table>
      <% end %>
      </div>
  </div>
</div>
 