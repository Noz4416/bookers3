<div class ="container">
  <div class ="row">
    <div class ="col-lg-5 px-5 pt-4 mx-auto">


      <h2>User info</h2>

      <% if @user.errors.any?%>
        <%= @user.errors.count %>errors have occurred
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message%></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model: @user do |f|%>
        <div class ="form mb-3">
          <%= f.label :name %></br>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class ="form mb-3">
          <%= f.label :Image %></br>
          <%= f.file_field :profile_image, accept:"image/*"%>
        </div>
        <div class ="form mb-3">
          <%= f.label :Introduction %></br>
          <%= f.text_area :introduction, autofocus: true %>
        </div>
        <div class ="actions mb-3">
          <%= f.submit"Update User", class:"btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>



