     <h2>User info</h2>


     <table class ="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= users.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= users.introduction %></th>
        </tr>
      </tbody>
     </table>

     <div class ="action btn btn-outline-secondary btn-block">
      <% if users == current_user %>
        <a class ="action" href="/users/:id/edit"></a>
      <% else %>
        <a class ="action" href="/users/:id"></a>
        <%= link_to user_path(users) %>
      <% end %>
      <i class ="fa fa-user-cog fa-w-20"></i>
     </div>

     <h2 class ="mt-3 pb-2">New book</h2>

     <%= form_with model: book do |f|%>

      <div class="form pb-3">
        <label>Title</label>
        <%= f.text_field :title, class:"form-control"%>
      </div>
      <div class="form pb-3">
        <label>Opnion</label>
        <%= f.text_area :introduction, class:"form-control"%>
      </div>
      <div class="action pb-3">
        <%= f.submit'Create Book', class:"btn btn-success"%>
      </div>
     <% end %>
     </div>