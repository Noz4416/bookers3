<div class ="container px-3">
  <div class ="row">
    <div class ="col-md-3 pt-4">

　　　<%= render 'list', user: @user, book: @book%>
　　　<%= render 'newbook', book: @new_book%>

    </div>

    <div class ="col-md-9 pt-4">
      <h2>Book detail</h2>
        <table class = "table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(100,100)%>
                <% end %></br>
                <%= link_to @book.user.name, user_path(@book.user) %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id)%></td>
              <td><%= @book.body%></td>
              <td>コメント数: <%= @book.book_comments.count %></td>
              <td>
                <div id = "favorite_<%= @book.id %>">
                  <%= render 'favorites/btn', book: @book %>
                </div>
              </td>

              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success"%></td>
                <td><%= link_to "Destroy",book_path, method: :delete, class: "btn btn-sm btn-danger", "data-confirm"=>"本当に削除しますか？"%></td>
              <% end %>
            </tr>
          </tbody>
        </table>

        <%= render 'book_comments/index', book: @book %>
        <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>

    </div>
  </div>
</div>