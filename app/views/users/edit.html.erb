<div class ="container">
  <div class ="row">
    <div class ="col-lg-5 px-5 mx-auto">


      <h2>User info</h2>
      <%= form_with model: @user do |f|%>
        <div class ="form">
          <%= f.label :name %></br>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class ="form">
          <%= f.label :Image %></br>
          <%= f.file_field :profile_image, accept:"image/*"%>
        </div>
        <div class ="form">
          <%= f.label :Introduction %></br>
          <%= f.text_area :introduction, autofocus: true %>
        </div>
        <div class ="actions">
          <%= f.submit"Update User", class:"btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>



