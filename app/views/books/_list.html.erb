<!--ユーザーの詳細-->
<div>
  <h2>User info</h2>

  <div><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:'80x80' %></div>
  <p>name: <%= book.user.name %></p>
  <p>introduction: <%= book.user.introduction %></p>
</div>

<h2>New Book</h2>
  <%=form_with model: book do |f|%>

  <div class = "form-group">
    <label for ="book-title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class ="form-group">
    <label for ="book-body">Opinion</label><br>
    <%= f.text_area :body%>
  </div>
    <%= f.submit'Create Book'%>
  </div>
  <% end %>